{
	"verbose": true,
	"debug": false,
	"exec": "cross-env node --inspect -r ts-node/register ./src/server.ts",
	"ignore": [
		"mochawesome-report",
		"node_modules",
		"./test",
		"**/*.d.ts",
		"*.test.ts",
		"*.spec.ts",
		"fixtures/*",
		"test/**/*",
		"docs/*"
	],
	"events": {
		"restart": "echo \"[Warning] Remember run npm run test b4 push to dev branch !\""
	},
	"watch": ["./src"],
	"ext": "ts, gql, json",
	"inspect": true
}