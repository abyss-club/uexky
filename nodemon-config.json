{
	"verbose": true,
	"debug": false,
	"exec": "cross-env node --inspect -r ts-node/register -r dotenv/config ./src/server.ts",
	"ignore": [
		"mochawesome-report",
		"node_modules",
		"./test",
		"**/*.d.ts",
		"*.test.ts",
		"*.spec.ts",
		"fixtures/*",
		"test/**/*",
		"docs/*"
	],
	"events": {
		"restart": "echo \"[Warning] Restarting...\""
	},
	"watch": ["./src"],
	"ext": "ts, gql, json",
	"inspect": true
}