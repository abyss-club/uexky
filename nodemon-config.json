{
	"verbose": true,
	"debug": false,
	"exec": "cross-env babel-node -r node_modules/dotenv/config --inspect ./src/index.js",
	"ignore": [
		"mochawesome-report",
		"node_modules",
		"./test",
		"fixtures/*",
		"test/**/*",
		"docs/*"
	],
	"events": {
		"restart": "echo \"[Warning] Restarting...\""
	},
	"watch": ["./src"],
	"ext": "js, gql, json",
	"inspect": true
}
